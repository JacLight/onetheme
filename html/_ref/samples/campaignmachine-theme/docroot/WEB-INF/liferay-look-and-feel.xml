<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.0+</version>
	</compatibility>
	
	<company-limit>
			<company-includes/>
			<company-excludes />
	</company-limit>
	
	<theme id="smsmachine" name="The SMS Machine" >
		<template-extension>vm</template-extension>
		
		<settings>
			<setting configurable="true" key="show-headbar" type="checkbox" value="true" />
			<setting configurable="true" key="show-logo" type="checkbox" value="true" />
			<setting configurable="true" key="show-header-socialshare" type="checkbox" value="true" />
			<setting configurable="true" key="show-site-name" type="checkbox" value="false" />
			<setting configurable="true" key="show-page-title" type="checkbox" value="false" />
			<setting configurable="true" key="show-navbar" type="checkbox" value="true" />
			<setting configurable="true" key="show-home-link" type="checkbox" value="true" />
			<setting configurable="true" key="show-login" type="checkbox" value="true" />
			<setting configurable="true" key="show-search" type="checkbox" value="false" />
			<setting configurable="true" key="show-goto-top" type="checkbox" value="true" />
			<setting configurable="true" key="show-language" options="None,Flags,Drop Down,Long Text,Short Text" type="select" value="0"></setting>
			<setting configurable="true" key="show-breadcrumb" type="checkbox" value="false" />
			<setting configurable="true" key="header-content" type="text" value="" />
			
			<setting configurable="true" key="portlet-setup-show-borders-default" type="checkbox" value="false" />
			<setting configurable="true" key="bullet-style" options="dots,arrows" type="select" value="dots" />
			
			<setting configurable="false" key="show-site-name-default" value="true" />
			<setting configurable="false" key="show-site-name-supported" value="true" />
			
			<setting configurable="true" key="body-content" type="text" value="" />
			
			<setting configurable="true" key="show-footer" type="checkbox" value="true" />
			<setting configurable="true" key="show-footer-socialshare" type="checkbox" value="true" />
			<setting configurable="true" key="footer-content" type="text" value="" />
			<setting configurable="true" key="show-legal" type="checkbox" value="false" />
			<setting configurable="true" key="footer-copyright" type="text" value="Â© [sitename] [year], All Rights Reserved" />
			<setting configurable="true" key="show-copyright" type="checkbox" value="true" />
			<setting configurable="true" key="show-footer-navbar" type="checkbox" value="true" />
			<setting configurable="true" key="show-footer-navbar-sub" type="checkbox" value="false" />
		</settings>
	
		<roles>
			<role-name>User</role-name>
		</roles>
	</theme>
</look-and-feel>